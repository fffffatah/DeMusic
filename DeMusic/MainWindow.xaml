<Window x:Name="Landing" x:Class="DeMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeMusic"
        mc:Ignorable="d"
        Title="DeMusic" Height="715.1" Width="1160.4" ResizeMode="CanMinimize" WindowStyle="None">
    <Grid Background="Black">
        <Canvas x:Name="musicControls" HorizontalAlignment="Left" Height="118" Margin="0,597,0,0" VerticalAlignment="Top" Width="1160" Background="#FF1A1A1A"/>
        <Canvas x:Name="leftControls" HorizontalAlignment="Left" Height="597" VerticalAlignment="Top" Width="154" Background="#FF121212"/>
        <Button x:Name="closeButton" Content="X" HorizontalAlignment="Left" Margin="1111,0,0,0" VerticalAlignment="Top" Width="49" Height="29" FontSize="16" Background="Black" BorderBrush="Black" Foreground="White" Click="closeOnClick" ClickMode="Release"/>
        <Button x:Name="minimizeButton" Content="-" HorizontalAlignment="Left" Margin="1060,0,0,0" VerticalAlignment="Top" Width="51" Height="29" FontSize="14" FontWeight="Bold" Background="Black" Foreground="White" BorderBrush="Black" Click="minimizeOnClick" ClickMode="Release"/>

    </Grid>
</Window>
